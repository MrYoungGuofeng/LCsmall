<view class='page__bd'>
  <view class="cimgSize">
    <image src='../../../images/logo.png'></image>
    <text>绿城装修管家</text>
  </view>
  <form bindsubmit="formSubmit" >
    <view class='boxpositio'>
      <view class=" weui-cell_input weui-cell_vcode">
          <view class="weui-cell__bd">
              <view class="iconfont icon-user user"></view>  
              <input name="iphone" value='{{phone}}' type='number' class="weui-input" placeholder="手机号码" />
              <!-- 13566027811  18356987163 13566027914 -->
          </view>
      </view>
      <view class=" weui-cell_input weui-cell_vcode">
          <view class="weui-cell__bd">
          <view class="iconfont icon-pass"></view>  
              <input type='password' name="password" value='{{pwd}}'  class="weui-input" placeholder="输入密码" />
          </view>
      </view>
      <view class="page__bd page__bd_spacing">
        <view class="weui-flex">
            <view class="weui-flex__item"></view>
            <view><view class="placeholder fontStyle" bindtap='missCipher'>忘记密码</view></view>
        </view>
    </view>
      <view class="page__bd page__bd_spacing marginTop buttonStyle">
        <button formType="submit" class="weui-btn" bindtap='login' >登录</button>
      </view>
      <view class='textIfo'>
        <text>绿城服务集团旗下唯一第三方监理</text>
        <text>装修前找管家.全程无忧</text>
      </view>
    </view>
  </form>
</view>