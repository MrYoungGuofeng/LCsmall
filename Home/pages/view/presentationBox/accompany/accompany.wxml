<view class='mtop'>
  <view class="weui-cells weui-cells_after-title">
    <view class="weui-cell">
      <view class="weui-cell__bd">
        <view class="lineGreen"></view>订单编号：{{orderInfo.orderDetail.orderNumber}}</view>
      <view class="weui-cell__ft">{{orderInfo.orderDetail.categoryName}}服务</view>
    </view>
    <view class='viewBox userInfo'>
      <view class='newTop'>
        <view class="lineGreen"></view>业主信息</view>
      <view class='newBox'>
        <view class="weui-flex">
          <view class="weui-flex__item">
            <view class="placeholder">业主姓名：
              <text>{{orderInfo.orderDetail.name}}</text>
            </view>
          </view>
          <view class="weui-flex__item">
            <view class="placeholder">联系方式：
              <text>{{orderInfo.orderDetail.phone}}</text>
            </view>
          </view>
        </view>
        <view class="weui-flex">
          <view class="weui-flex__item">
            <view class="placeholder">业主地址：
              <text>{{orderInfo.orderDetail.detailAddress}}</text>
            </view>
          </view>
        </view>
      </view>
    </view>
    <view class='viewBox fwinfo'>
      <view class='newTop'>
        <view class="lineGreen"></view>房屋信息</view>
      <view class='newBox'>
        <view class="weui-flex">
          <view class="weui-flex__item">
            <view class="placeholder">房屋类型：
              <text>{{orderInfo.categoryName}}</text>
            </view>
          </view>
          <view class="weui-flex__item">
            <view class="placeholder">房屋面积：
              <text>{{orderInfo.acreage}}㎡</text>
            </view>
          </view>
        </view>
        <view class="weui-flex">
          <view class="weui-flex__item">
            <view class="placeholder">服务时间：
              <text>{{orderInfo.startTime}}</text>
            </view>
          </view>
          <view class="weui-flex__item">
            <view class="placeholder">装修类型：
              <text>{{orderInfo.decorate}}</text>
            </view>
          </view>
        </view>
      </view>
    </view>
    <view class='viewBox sginfo'>
      <view class='newTop'>
        <view class="lineGreen"></view>设计师信息</view>
      <view class='newBox'>
        <view class="weui-flex">
          <view class="weui-flex__item">
            <view class="placeholder">装修公司：
              <text>{{orderInfo.decoration}}</text>
            </view>
          </view>
        </view>
        <view class="weui-flex">
          <view class="weui-flex__item">
            <view class="placeholder">工期：
              <text>{{orderInfo.duration}}个月</text>
            </view>
          </view>
          <view class="weui-flex__item">
            <view class="placeholder">装修类型：
              <text>{{orderInfo.decorate}}</text>
            </view>
          </view>
        </view>
        <view class="weui-flex">
          <view class="weui-flex__item">
            <view class="placeholder">项目经理：
              <text>{{orderInfo.pmname}}（{{orderInfo.pmphone}}）</text>
            </view>
          </view>
        </view>
        <view class="weui-flex">
          <view class="weui-flex__item">
            <view class="placeholder">工人信息：
              <text>{{orderInfo.workerInfo.name}}（{{orderInfo.workerInfo.phone}} {{orderInfo.workerInfo.profession}} {{orderInfo.workerInfo.profession}}元㎡）</text>
              <textarea class='textareBox' disabled>{{orderInfo.workerInfo.remark}}</textarea>
            </view>
          </view>
        </view>
      </view>
    </view>
    <view class='viewBox'>
      <view class='newTop'>
        <text>陪签备忘录</text>
        <text>基础信息</text>
      </view>
      <view class='newBox'>
        <view class='lineHeightLine borderBottem'>
          <view class="weui-flex">
            <view class="weui-flex__item">
              <view class="placeholder">后期可能存在增项</view>
            </view>
            <view class="weui-cell__ft weui-cell__ft_in-access"></view>
          </view>
        </view>
        <view class='lineHeightLine borderBottem'>
          <view class="weui-flex">
            <view class="weui-flex__item">
              <view class="placeholder">砌筑巡检3.0</view>
            </view>
            <view class="weui-cell__ft weui-cell__ft_in-access"></view>
          </view>
        </view>
        <view class='lineHeightLine borderBottem'>
          <view class="weui-flex">
            <view class="weui-flex__item">
              <view class="placeholder">材料工艺项目</view>
            </view>
            <view class="weui-cell__ft weui-cell__ft_in-access"></view>
          </view>
        </view>
        <view class='lineHeightLine borderBottem'>
          <view class="weui-flex">
            <view class="weui-flex__item">
              <view class="placeholder">施工图纸建议</view>
            </view>
            <view class="weui-cell__ft weui-cell__ft_in-access"></view>
          </view>
        </view>
        <view class='lineHeightLine borderBottem'>
          <view class="weui-flex">
            <view class="weui-flex__item">
              <view class="placeholder">合同记录</view>
            </view>
            <view class="weui-cell__ft weui-cell__ft_in-access"></view>
          </view>
        </view>
      </view>
    </view>
  </view>
</view>