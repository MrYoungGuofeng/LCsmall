<view class='mtop'>
  <view class="weui-cells weui-cells_after-title">
    <view class="weui-cell">
      <view class="weui-cell__bd">
        <view class="lineGreen"></view>订单编号：{{orderInfo.orderDetail.orderNumber}}</view>
      <view class="weui-cell__ft">{{orderInfo.orderDetail.serviceStateName}}服务</view>
    </view>
    <view class='viewBox userInfo'>
      <view class='newTop'>
        <view class="lineGreen"></view>业主信息</view>
      <view class='newBox'>
        <view class="weui-flex">
          <view class="weui-flex__item">
            <view class="placeholder">业主姓名：
              <text>{{orderInfo.name}}</text>
            </view>
          </view>
          <view class="weui-flex__item">
            <view class="placeholder">联系方式：
              <text>{{orderInfo.orderDetail.phone}}</text>
            </view>
          </view>
        </view>
        <view class="weui-flex">
          <view class="weui-flex__item">
            <view class="placeholder">业主地址：
              <text>{{orderInfo.orderDetail.detailAddress}}</text>
            </view>
          </view>
        </view>
      </view>
    </view>
    <view class='viewBox fwinfo'>
      <view class='newTop'>
        <view class="lineGreen"></view>房屋信息</view>
      <view class='newBox'>
        <view class="weui-flex">
          <view class="weui-flex__item">
            <view class="placeholder">房屋类型：
              <text>{{orderInfo.categoryName}}</text>
            </view>
          </view>
          <view class="weui-flex__item">
            <view class="placeholder">房屋面积：
              <text>{{orderInfo.acreage}}㎡</text>
            </view>
          </view>
        </view>
        <view class="weui-flex">
          <view class="weui-flex__item">
            <view class="placeholder">服务时间：
              <text>{{orderInfo.startTime}}</text>
            </view>
          </view>
          <view class="weui-flex__item">
            <view class="placeholder">装修类型：
              <text>{{orderInfo.decorate==null?'':orderInfo.decorate}}</text>
            </view>
          </view>
        </view>
      </view>
    </view>
    <view class='viewBox sginfo'>
      <view class='newTop'>
        <view class="lineGreen"></view>设计师信息</view>
      <view class='newBox'>
        <view class="weui-flex">
          <view class="weui-flex__item">
            <view class="placeholder">装修公司：
              <text>{{orderInfo.decoration==null?'':orderInfo.decoration}}</text>
            </view>
          </view>
        </view>
        <view class="weui-flex">
          <view class="weui-flex__item">
            <view class="placeholder">工期：
              <text>{{orderInfo.duration}}个月</text>
            </view>
          </view>
          <view class="weui-flex__item">
            <view class="placeholder">装修类型：
              <text>{{orderInfo.decorate}}</text>
            </view>
          </view>
        </view>
        <view class="weui-flex">
          <view class="weui-flex__item">
            <view class="placeholder">项目经理：
              <text>{{orderInfo.pmname}}（{{orderInfo.pmphone}}）</text>
            </view>
          </view>
        </view>
        <view class="weui-flex">
          <view class="weui-flex__item">
            <view class="placeholder">设计师：
              <text>{{orderInfo.workerInfo.name}}（{{orderInfo.workerInfo.phone}} {{orderInfo.workerInfo.profession}} {{orderInfo.workerInfo.profession}}元㎡）</text>
              <textarea class='textareBox' disabled>{{orderInfo.workerInfo.remark==null? '无' : orderInfo.workerInfo.remark}}</textarea>
            </view>
          </view>
        </view>
      </view>
    </view>
    <view style='position:relative;' class='viewBox'>
        <view class="weui-navbar">
            <block wx:for="{{tabs}}" wx:key="*this">
                <view id="{{index}}" class="weui-navbar__item {{activeIndex == index ? 'weui-bar__item_on' : ''}}" bindtap="tabClick">
                    <view class="weui-navbar__title">{{item.name}}</view>
                </view>
            </block>
            <view class="weui-navbar__slider" style="left: {{sliderLeft}}px; transform: translateX({{sliderOffset}}px); -webkit-transform: translateX({{sliderOffset}}px);"></view>
        </view>
        <view class="weui-tab__panel" >
            <view wx:for="{{tabs}}" wx:key="*this" class="weui-tab__content" hidden="{{activeIndex != index}}">
                <view bindtap='towantAdd' wx:for="{{item.list}}" wx:key='this' class='switchlist' data-towantAdd='{{item}}'>{{item}} <text class='iconfont icon-jiantou flag_jt'></text></view>
            </view>
        </view>
    </view>
  </view>
</view>
