/* pages/view/orderDetails/orderDetails.wxss */
.constructioninfo{
  font-size:25rpx;
  color:#757575;
  background-color: #f5f5f5;
}
page{
  background: #f5f5f5;
}
.constructioninfo>view{
  background-color: #fff;
  overflow: hidden;
  margin-bottom:15rpx;
}
.constructioninfo .titles{
  padding:20rpx 20rpx 20rpx 20rpx;
  border-bottom: 1rpx #f5f5f5 solid;
  background: #fff;
}
.half text{
  position: absolute;
  right:30px;
  top: 15rpx;
  z-index: 999;
  line-height: 2.2;
}
.worker{
  background: #f5f5f5 !important;
  padding-bottom: 100rpx !important;
  overflow: hidden;
  display: block;
}
.constructioninfo  .flag{
  width:5rpx;
  height:5rpx;
  border-left:5rpx #30bc8f solid;
  padding-left: 10rpx;
}
.constructioninfo .content_detail{
  padding:10rpx 20rpx;
  overflow:hidden;
  background: #fff;
}
.workeri{
  margin-bottom: 20rpx;
  padding:20rpx 20rpx;
}
.picker{
  height: 40rpx;
}
.del{
  position: absolute;
  right: 20rpx;
  color: red;
}
.constructioninfo .content_detail>view{
  /* clear: both; */
  /* width:100%; */
  /* text-overflow: ellipsis;
  white-space: nowrap; */
  position: relative;
  overflow: hidden;
  padding: 15rpx 0rpx;
  height: 40rpx;
  /* border-bottom: 1rpx solid #cccccc; */
}
.constructioninfo .content_detail .name{
  height:53rpx;
  line-height: 2.2;
  float: left;
  padding-left: 20rpx;
  z-index: 100
}
.workerdate{
   position: absolute;
   right: 10rpx;
   z-index: 999999;
   line-height: 2.2;
}
.constructioninfo .content_detail input{
  width:55%;
  display:block;
  float: left;
  border-radius: 10rpx;
  padding:0 5rpx;
}
.constructioninfo .half{
  width:45%;
  float: left;
  position: relative;
  overflow: hidden;
  /* text-overflow: ellipsis;
  white-space: nowrap; */
}
.constructioninfo .half:nth-child(1){
    margin-right:40rpx;
}
.constructioninfo .half:nth-child(2) input{
    width:160rpx !important;
    position: relative;
    z-index: 1000000
}
.red{
  color: red;
  left: 0px !important;
  top: 5rpx !important;
  width: 20rpx
}

.borderstyle{
  width:63%;
  height:40rpx;
  border:1px solid #cccccc;
  position: absolute;
  top:0;
  right:0;
  padding: 0rpx 8rpx !important;
  border-radius: 8rpx;
  box-sizing: border-box;
}
.content_detail textarea{
  width:93%;
  background-color: #f5f5f5;
  padding: 20rpx;
  margin-top:10rpx;
  border-radius: 10rpx;
}
.btngroup{
   margin-top:100rpx;
   position: fixed;
   bottom:0rpx;
   width:100%;
   margin-bottom: 0rpx !important;
   padding-bottom: 0rpx !important;
   z-index: 100000;
}
.btngroup .weui-btn{
  font-size:30rpx;
  border-radius: 0;
  margin-top:0rpx;
}
.weui-btn[type='primary']{
  background-color: #11b786;
}
.workerInfo{
  margin-left:340rpx;
}