/* pages/orderOwner/orderOwner.wxss */
page{
  width:100%;
  height: 100%;
  background-color: #f5f5f5;
}
.page_top{
  box-shadow: 0rpx 0rpx 10rpx 1rpx #dddddd;
  padding: 20rpx 0px;
  position: fixed;
  width: 100%;
  top: 0px;
  background: #ffffff;
  z-index: 9999
}
.searchbox{
  width:80%;
  font-size: 30rpx;
  margin:0rpx auto;
  border-radius:10rpx;
  padding:15rpx 30rpx;
  background-color: #ededed;
}
.container_order{
  /* height:930rpx; */
  /* height: 100vh; */
  overflow: hidden;
  background-color: #f5f5f5;
  padding-top:140rpx;
}
.order{
  padding: 20rpx;
  margin:10rpx 25rpx 20rpx 25rpx;
  background-color: #fff;
  border-radius: 10rpx;
  box-shadow: 0rpx 0rpx 10rpx 1rpx #dddddd
}
.order .order_top{
  text-align: left;
  font-size: 25rpx;
  overflow: hidden;
  border-bottom: 1rpx solid #dddddd;
  padding-bottom: 10rpx;
  color:#757575;
}
.order .order_top .float_l{
  float: left;
  padding-left: 30rpx;
}
.order .order_top .float_r{
  float: right;
  padding-right: 10rpx;
}
.order .order_top .float_r .space_order{
  font-size:25rpx;
  color:red;
  padding: 0 10rpx;
}
.order .order_top .float_r .status_order{
  color:#30bc8f;
}
.order .order_container{
  /* height:320rpx; */
  overflow: hidden;
}
.order .order_container .headeimg{
  width:150rpx;
  height:150rpx;
  border-radius: 50%;
  /* background-color: #ededed; */
  float: left;
  margin-top: 70rpx;
  margin-left:20rpx;
}
.order .order_container .headeimg image{
  width:150rpx;
  height:150rpx;
}
.order .order_container .content{
  width:90%;
  float: left;
  margin-top:20rpx;
  margin-left:30rpx;
  /* width: 100%; */
}
.order .order_container .content .msg{
  color:#30bc8f;
}
.order .order_container .content .name{
  font-size: 35rpx;
  letter-spacing: 20rpx;
}
.order .order_container .content .phone{
  font-size: 26rpx;
}
.order .order_container .content .tips{
  color:#757575;
  font-size: 30rpx;
}
.order .order_container .content .tips .iconfont{
  font-size: 30rpx;
}
.order .order_container .content .tips .icon-fangwuxinxi{
  font-size: 36rpx;
  margin-left: -2rpx;
}
.order .order_container .content .tips .icon-mianji{
  font-size: 35rpx;
}
.order .order_container .content .tips .words{
  font-size: 25rpx;
}
.order .order_container .content .tips .cont{
  width:100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}